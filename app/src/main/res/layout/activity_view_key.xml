<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:background="@color/colorPrimary" android:padding="30dp">


    <TextView
            android:text="Your sharable PublicKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/viewKeyTitle"
            android:layout_centerHorizontal="false" android:textColor="@color/white"
            android:textSize="24sp" android:textStyle="bold"/>

    <TextView
            android:id="@+id/viewPublicKeyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:focusable="true"
            android:longClickable="true"
            android:layout_centerHorizontal="true" android:textColor="@color/dark_grey_two"
            android:background="@color/white" android:height="300dp"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="50dp"/>

</RelativeLayout>